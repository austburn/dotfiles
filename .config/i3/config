# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -z -l 3 -fn "gohufont-14" -nb "$dmenu_bg" -nf "$white" -sb "$dmenu_select" -y 540 -w 960 -x 480

# change focus
bindsym $mod+l exec i3lock -i $bg_photo -t

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
